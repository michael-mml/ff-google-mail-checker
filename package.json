{
  "name": "ff-google-mail-checker",
  "version": "0.0.4",
  "description": "Opens your Gmail inbox when you click the button.",
  "main": "src/background_page/google-mail-checker.ts",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-no-unsanitized": "^3.1.4",
    "typescript": "^4.4.3",
    "web-ext": "^6.0.0"
  },
  "scripts": {
    "build": "yarn clean; yarn tsc; mkdir build && cp -r src/ manifest.json build/ && yarn run web-ext build",
    "clean": "rm -r build/; rm src/**/*.js src/**/*.map",
    "lint": "eslint --config config/eslint/.eslintrc.json ./src",
    "start:firefox:wsl": "yarn run web-ext run",
    "test": "echo \"Error: no test specified\" && exit 1",
    "web-ext": "web-ext --config config/web-ext/web-ext-config.js",
    "web-ext:lint": "yarn run web-ext lint"
  },
  "author": "michael-mml",
  "repository": "https://gitlab.com/michael-mml/ff-google-mail-checker.git",
  "license": "GPL-2.0-only",
  "dependencies": {}
}
